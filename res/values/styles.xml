<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DroidHub" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@drawable/solid_dark_blue</item>
        <item name="android:actionBarStyle">@style/DroidHub.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/DroidHub.ActionBar.OverFlow</item>
        <item name="android:actionBarWidgetTheme">@style/DroidHub.ActionBar.WidgetTheme</item>
        <item name="android:popupMenuStyle">@style/DroidHub.PopupMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/DroidHub.DropDownListViewStyle</item>
    </style>

    <style name="DroidHub.ActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/DroidHub.ActionBar.TitleTextStyle</item>
        <item name="android:background">@drawable/grad_action_bar</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DroidHub.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="DroidHub.ActionBar.OverFlow" parent="android:Widget.Holo.ActionButton.Overflow"/>

    <style name="DroidHub.ActionBar.WidgetTheme" parent="android:Widget">
        <item name="android:textColor">@color/drawer_text_selector</item>
    </style>

    <style name="DroidHub.PopupMenuStyle" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/bg_popup</item>
    </style>

    <style name="DroidHub.DropDownListViewStyle" parent="android:Widget.Holo.Light.ListView">
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="DroidHub.AlertDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:textColor">#23B2AB</item>
    </style>

    <style name="DroidHub.Settings" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/DroidHub.Settings.ActionBar</item>
        <item name="android:windowBackground">@drawable/solid_dark_blue</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DroidHub.Settings.ActionBar" parent="DroidHub.ActionBar">
        <item name="android:displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="DroidHub.RefreshShape">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/shape_refresh</item>
    </style>
</resources>